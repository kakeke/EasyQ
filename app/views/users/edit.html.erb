
<div class="row">
	<div class="col-lg-2"></div>
	<div class="col-lg-8" style="text-align: center;">
		<ul id="tabmenu" class="nav nav-tabs">
	        <li class="active"><a href="#user_setting">ユーザー設定</a></li>
	        <li><a href="#sns_setting">SNS連携設定</a></li>
	        <li><a href="#other_setting">設定</a></li>
        </ul>

        <div class="tab-content">
	        <div class="tab-pane active" id="user_setting">
	        	<%= form_for @user do |f| %>

	        	<div>
    	            <%= f.label "ニックネーム" %><br>
    	            <%= f.text_field :name %>
    	        </div>

                <div>
                	<%= f.label "プロフィール画像" %><br>
                	<%#= f.attachment_field :image, style:"padding-left: 35%;" %>
                </div>

                <div>
                	<%= f.label "メールアドレス" %><br>
                	<%= f.text_field :email %>
                </div>

                <div>
    	            <%= f.label "自己紹介文" %><br>
    	            <%= f.text_field :profile %>
                </div>

                    <%= f.submit "更新する" %>

    	        <% end %>
            </div>
            <div class="tab-pane" id="sns_setting">
            	<p>aaaa</p>
            </div>
            <div class="tab-pane" id="other_setting">
            	<p>bbbb</p>
            </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
	</div>
</div>
</div>

<script>
	$('#tabmenu a').click(function (e) {
	e.preventDefault();
	$(this).tab('show');
});
</script>