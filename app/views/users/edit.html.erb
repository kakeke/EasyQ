<div class="container" style="margin-top: 50px">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8" style="text-align: center;">
            <div>
            <%= form_for @user do |f| %>
            <div>
                <%= f.label "ニックネーム" %><br>
                <%= f.text_field :name %>
            </div>

            <div>
                <%= f.label "プロフィール画像" %><br>
                <%#= f.attachment_field :image, style:"padding-left: 35%;" %>
            </div>

            <div>
                <%= f.label "メールアドレス" %><br>
                <%= f.text_field :email %>
            </div>

            <div>
                <%= f.label "自己紹介文" %><br>
                <%= f.text_field :profile %>
            </div>
            <%= f.submit "更新する" %>
            <% end %>
        </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>