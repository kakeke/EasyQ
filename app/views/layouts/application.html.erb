<!DOCTYPE html>
<html>
  <head>
    <title>EasyQ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header style="background-color: #9933CC; height: 60px;">
      <div class="container">
        <div class="row">
          <div class="col-xs-4"></div>
          <div class="col-xs-4">
            <h2 style="text-align: center;"><a href="/" style="color: white;">EasyQ</a></h2>
         </div>
          <div class="col-xs-4"></div>
        </div>
      </div>
    </header>
    <div>
      <% if current_user %>
        Signed in as <strong><%= current_user.name %></strong>!
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
      <% end %>
    </div>
    <div>
    <%= yield %>
    </div>
  </body>
</html>
